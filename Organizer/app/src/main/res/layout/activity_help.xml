<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.marko_polo.organizer.HelpActivity"
    android:onClick="goToMyActivity">

    <TextView
        android:text="Ця програма дозволяє відображати Ваш екран на будь-якому підключеному пристрою (планшет чи смартфон) й має можливість підрахунку кількості підключених користувачів. Вона може стати у нагоді, якщо Ви бажаєте переглянути Ваші фото з великою компанією друзів або , якщо Ви викладач, розповісти цікавіше Вашу лекцію."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtHelp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ПОВЕРНУТИСЯ"
        android:id="@+id/btnBackToMyActivity"
        android:layout_marginBottom="186dp"
        android:onClick="goToMyActivity"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
